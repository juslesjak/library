@page "{bookId:int?}"
@model Library.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.Book.Id != 0)
{
    <div style="padding-bottom:8rem; padding-top: 2rem">
        <h2 style="float:left; font-size: 18px; padding-right: 2rem">Trenutno urejate: </h2>
        <h2 style="float:left">@Model.Book.Naslov (@Model.Book.LetoIzdaje) </h2>

    </div>

}
else
{
    <div style="padding-bottom:8rem; padding-top: 2rem">
        <h2 style="float:left; font-size: 30px; padding-right: 2rem">Podatki o novi knjigi: </h2>
    </div>
}


<form method="post">

    <input type="hidden" asp-for="Book.Id" />

    <div class="form-group">
        <label asp-for="Book.ISBN"></label>
        <input asp-for="Book.ISBN" class="form-control" />
        <span class="text-danger" asp-validation-for="Book.ISBN"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Naslov"></label>
        <input asp-for="Book.Naslov" class="form-control" />
        <span class="text-danger" asp-validation-for="Book.Naslov"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Opis"></label>
        <input asp-for="Book.Opis" class="form-control" />
        <span class="text-danger" asp-validation-for="Book.Opis"></span>

    </div>
    <div class="form-group">
        <label asp-for="Book.Oznaka"></label>
        <input asp-for="Book.Oznaka" class="form-control" />
        <span class="text-danger" asp-validation-for="Book.Oznaka"></span>

    </div>
    <div class="form-group">
        <label asp-for="Book.Izdajatelj"></label>
        <input asp-for="Book.Izdajatelj" class="form-control" />
        <span class="text-danger" asp-validation-for="Book.Izdajatelj"></span>

    </div>
    <div class="form-group">
        <label asp-for="Book.LetoIzdaje">Leto Izdaje</label>
        <input asp-for="Book.LetoIzdaje" class="form-control" />
        <span class="text-danger" asp-validation-for="Book.LetoIzdaje"></span>

    </div>
    <button type="submit" class="btn btn-primary" style="float:left">Shrani</button>
    @if (Model.Book.Id != 0)
    {
        <a asp-page="./Detail" asp-route-bookId="@Model.Book.Id" class="btn btn-primary" style="float:left;margin-left:2rem">Prekliči</a>

    }
    else
    {
        <a asp-page="./List" class="btn btn-primary" style="float:left;margin-left:2rem">Prekliči</a>

    }
</form>